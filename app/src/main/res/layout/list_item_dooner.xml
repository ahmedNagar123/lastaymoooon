<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:padding="8dp"
    app:cardBackgroundColor="#DADADA"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/relativeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <TextView
            android:id="@+id/tvNameDooner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="@string/name_dooner"
            android:textColor="#232b2b"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAgeDooner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameDooner"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/age_dooner"
            android:textColor="#232b2b"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBloodGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAgeDooner"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/blood_group"
            android:textColor="#232b2b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBloodGroup"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/city"
            android:textColor="#232b2b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvcity"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="@string/phone"
            android:textColor="#232b2b"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imvphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="160dp"
            android:layout_toEndOf="@+id/tvphone"
            android:layout_toRightOf="@+id/tvphone"
            app:srcCompat="@drawable/ic_phone_black_24dp"
            tools:ignore="VectorDrawableCompat" />


    </RelativeLayout>


</android.support.v7.widget.CardView>