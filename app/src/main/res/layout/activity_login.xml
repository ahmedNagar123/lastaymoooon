

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

     android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".auth.LoginActivity"
    android:background="#ffffff">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editEmailog"
        android:layout_marginBottom="89dp"
        app:srcCompat="@drawable/home_logo" />

    <EditText
        android:fontFamily="@font/jf_flat"


        android:id="@+id/editEmailog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:ems="10"
        android:gravity="right"
        android:hint="البريد الالكتروني"
        android:inputType="textEmailAddress"
        android:textColorHint="#0c274d"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:fontFamily="@font/jf_flat"
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="456dp"
        android:ems="10"
        android:gravity="right"
        android:hint="كلمة السر"
        android:inputType="textPassword"
        android:textColorHint="#0c274d"
        android:textSize="22dp"
        android:textStyle="bold"

        />

    <Button
        android:fontFamily="@font/jf_flat"
        android:id="@+id/btnLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPass"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btncustom"
        android:onClick="sign"
        android:text="تسجيل دخول"


        android:textColor="#0C274D"
        android:textSize="24dp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnReg"
        android:fontFamily="@font/jf_flat"


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLog"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btncustom"
        android:text="انشاء حساب جديد"
        android:textColor="#0C274D"
        android:textSize="24dp"
        android:textStyle="bold" />

    <ProgressBar
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
</ScrollView>